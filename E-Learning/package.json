{
  "name": "lms-mern",
  "version": "1.0.0",
  "description": "Learning Management System built with MERN stack",
  "main": "Backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev-simple": "concurrently \"npm run server-dev\" \"npm run client\"",
    "server": "cd Backend && npm run dev",
    "server-dev": "cd Backend && npm run dev-simple",
    "client": "cd Frontend/learn && npm start",
    "build": "cd Frontend/learn && npm run build",
    "install-server": "cd Backend && npm install",
    "install-client": "cd Frontend/learn && npm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": ["lms", "mern", "education", "learning"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
